
rules = hancho.rules

elf_to_hex_bin = hancho(
  rules.cpp_bin,
  in_srcs = "elf_to_hex.cpp",
  out_bin = "elf_to_hex",
)

def elf_to_hex(hancho, *, in_elf, out_code = [], out_rwdata = [], out_rodata = []):
  hancho(
    command    = "{rel(in_tool)} {rel(in_elf)} {rel(out_code)} {rel(out_rwdata)} {rel(out_rodata)}",
    in_tool    = elf_to_hex_bin,
    in_elf     = in_elf,
    out_code   = out_code,
    out_rwdata = out_rwdata,
    out_rodata = out_rodata,
  )
